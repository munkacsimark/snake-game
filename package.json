{
  "name": "snakegame",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.4.0",
    "npm-watch": "^0.2.0",
    "tsify": "^3.0.1",
    "typescript": "^2.4.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "build": "npm run html && npm run compile",
    "html": "cp src/index.html dist",
    "compile": "browserify src/main.ts -p tsify --noImplicitAny > dist/snake.js",
    "watch": "npm-watch"
  }
}
